<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/habitName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:gravity="left"
        android:minHeight="40dp"
        android:text="Habit"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Needs to be Completed today: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/needsToBeCompleted"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/habitName" />

    <TextView
        android:text="Habit Completed Today: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completedToday"
        android:textSize="18sp"
        android:textStyle="normal|italic"
        android:textColor="?android:attr/textColorTertiary"
        android:layout_below="@+id/needsToBeCompleted"
        android:layout_alignParentStart="true" />

</RelativeLayout>